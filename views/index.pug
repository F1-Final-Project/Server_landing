doctype html
html
    head
        title='MEATS'
        require('bootstrap')
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    body
        div.modal
        .modal-overlay
             form#contactform
                .form-wrapper
                    input#name(name='name' placeholder='Ваше имя и фамилия' required='' tabindex='1' type='text')
                    input#phone(name='phone' placeholder='+380' required='' tabindex='2' type='text')
                    textarea#comment(name='comment' tabindex='4' placeholder='Ваши пожелания')
                input#submit(name='submit' tabindex='5' value='Отправить' type='submit')
        div(class="container")
            div(class="header")
                div(class="header-logo") MEAT && Wine
                    span .CO
                ul(class="menu")
                    each item in menu
                        li
                            a(href="#" + item.category)=item.category
                button(class="reserve") Забронировать стол 
            div(class="content")
                .bd-example
                    #carouselExampleCaptions.carousel.slide(data-ride='carousel')
                        ol.carousel-indicators
                            li.active(data-target='#carouselExampleCaptions' data-slide-to='0')
                            li(data-target='#carouselExampleCaptions' data-slide-to='1')
                            li(data-target='#carouselExampleCaptions' data-slide-to='2')
                            li(data-target='#carouselExampleCaptions' data-slide-to='3')
                        .carousel-inner
                            .carousel-item.active
                                img.d-block.w-100(src='/img/chicken.jpg')
                                .carousel-caption.d-none.d-md-block
                                    h5.title-carusel=menu[0].category
                                    p.text-carusel=menu[0].description
                            .carousel-item
                                img.d-block.w-100(src='/img/steak.jpg')
                                .carousel-caption.d-none.d-md-block
                                    h5.title-carusel=menu[1].category
                                    p.text-carusel=menu[1].description
                            .carousel-item
                                img.d-block.w-100(src='/img/of-wine.jpg')
                                .carousel-caption.d-none.d-md-block
                                    h5.title-carusel=menu[2].category
                                    p.text-carusel=menu[2].description
                            .carousel-item
                                img.d-block.w-100(src='/img/desert.jpg')
                                .carousel-caption.d-none.d-md-block
                                    h5.title-carusel=menu[3].category
                                    p.text-carusel=menu[3].description
                        a.carousel-control-prev(href='#carouselExampleCaptions' role='button' data-slide='prev')
                            span.carousel-control-prev-icon(aria-hidden='true')
                            span.sr-only Previous
                        a.carousel-control-next(href='#carouselExampleCaptions' role='button' data-slide='next')
                            span.carousel-control-next-icon(aria-hidden='true')
                            span.sr-only Next
                div(id="populyar")
                    div.populyar-title Популярные  блюда
                    div.populyar-content
                        div.populyar-item
                            img.populyar-img(src="/img/vegetable-salad.jpg")
                            .populyar-text Цезарь
                            .price $20.0
                        div.populyar-item
                            img.populyar-img(src="/img/meal-served.jpg")
                            .populyar-text Куриный бульйон
                            .price $43.5
                        div.populyar-item
                            img.populyar-img(src="/img/against-black.jpg")
                            .populyar-text Кагор
                            .price $24.0
                div.block-menu(id=menu[0].category)
                    div.modal-menu
                    div.position-title=menu[0].category + ':'
                    each dish in menu[0].dishes
                        div.restaurant-menu
                            h3.dish-title=dish.title
                            h3.dish-price=dish.price + ' грн /'
                            h3.dish-weight=dish.weight + 'гр'
                div.block-menu(id=menu[1].category) 
                    div.modal-menu
                    div.position-title=menu[1].category + ':'
                    each dish in menu[1].dishes
                        div.restaurant-menu
                            h3.dish-title=dish.title
                            h3.dish-price=dish.price + ' грн /'
                            h3.dish-weight=dish.weight + 'гр'
                div.block-menu(id=menu[2].category)
                    div.modal-menu
                    div.position-title=menu[2].category + ':'
                    each dish in menu[2].dishes
                        div.restaurant-menu
                            h3.dish-title=dish.title
                            h3.dish-price=dish.price + ' грн /'
                            h3.dish-weight=dish.weight + 'гр'
                div.block-menu(id=menu[3].category)
                    div.modal-menu
                    div.position-title=menu[3].category + ':'
                    each dish in menu[3].dishes
                        div.restaurant-menu
                            h3.dish-title=dish.title
                            h3.dish-price=dish.price + ' грн /'
                            h3.dish-weight=dish.weight + 'гр'
            div.footer 
                .footer-title Контакты:
                .footer-content
                    .footer-text 
                        div Телефон: +38 (044) 235-00-25
                        div Адресс: Киев, пр. Павла Тычины, 1в
                    .footer-map
                        div(style='overflow:hidden;width: 400px;position: relative;')
                            iframe(width='400' height='300' src='https://maps.google.com/maps?width=400&height=300&hl=en&q=%D0%9A%D0%B8%D0%B5%D0%B2%2C%20%D0%A2%D1%8B%D1%87%D1%8B%D0%BD%D1%8B%201%D0%B2+(%D0%9D%D0%B0%D0%B7%D0%B2%D0%B0%D0%BD%D0%B8%D0%B5)&ie=UTF8&t=&z=14&iwloc=B&output=embed' frameborder='0' scrolling='no' marginheight='0' marginwidth='0')
                            style.
                                #gmap_canvas img{max-width:none!important;background:none!important}
                            br
                .sub-footer 
                    div All RIghts Reserved - 2016 DesignCoon
                    div www.sellfy.com/designcoon
